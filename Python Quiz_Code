
print('Welcome to Apollo 11 History Quiz')
answer=input('Are you ready to play the Quiz ? (yes/no) :')
score=0
total_questions=3
 
if answer.lower()=='yes':
    answer=input('Question 1: Who was the first man on the moon? (neil armstrong/ buzz alderin/mike collins) :')
    if answer.lower()=='neil armstrong':
        score += 1
        print('correct')
    else:
        print('Wrong Answer :(')
 
 
    answer=input('Question 2: Who was the second man on the moon? (buzz alderin/mike collins) :')
    if answer.lower()=='buzz alderin':
        score += 1
        print('correct')
    else:
        print('Wrong Answer :(')
 
    answer=input('Question 3: What year was the first moon landing? (1968/1969/1970) :')
    if answer.lower()=='1969':
        score += 1
        print('correct')
    else:
        print('Wrong Answer :(')
 
print('Thankyou for Playing this small quiz game, you attempted',score,"questions correctly!")
mark=(score/total_questions)*100
print('Marks obtained:',mark)
print('BYE!')
